<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.sanovikov71.contactlist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ContactListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="AddItemActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name=".ContactListActivity$ArticleActivity" >
        </activity>
        <activity android:theme="@android:style/Theme.Dialog" android:name="EditItemActivity"></activity>
        <activity android:name="DeleteItemActivity" android:theme="@android:style/Theme.Dialog"></activity>
    </application>

</manifest>